{
    "name": "drupalci/drupalci_testbot",
    "description": "Central Script to control drupalci_testbot",
    "authors": [
        {
            "email": "b.widmer@dasrecht.net",
            "name": "Bastian Widmer",
            "homepage": "http://bastianwidmer.ch"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "src",
            "DrupalCI\\Tests": "tests"
        }
    },
    "bin" : [
        "drupalci"
    ],
    "config": {
        "bin-dir" : "bin/"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/drupalci/docker-php"
        }
    ],
    "require": {
        "symfony/console": "2.8.*",
        "symfony/finder": "2.8.*",
        "symfony/yaml": "2.8.*",
        "symfony/process": "2.8.*",
        "doctrine/common": "*.*",
        "composer/composer": "1.0.*@dev",
        "docker-php/docker-php": ">=1.22.x-dev",
        "pimple/pimple": "^3",
        "guzzlehttp/guzzle": "~4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "drupal/coder": "8.2.8"
    },
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": "DrupalCI\\Composer\\Composer::configurePhpcs"
    }
}
